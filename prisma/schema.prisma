datasource db {
  provider = "postgresql" // PlanetScale হলে mysql
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String? 
  avatarUrl String?  // optional, later Supabase avatar link
  createdAt DateTime @default(now())
}
